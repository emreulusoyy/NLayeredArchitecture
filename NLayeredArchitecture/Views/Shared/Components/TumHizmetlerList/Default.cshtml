

<!-- Section: page title -->
<section class="page-title layer-overlay section-typo-light bg-img-center" data-tm-bg-img="/images/bg/bg1.jpg">
    <div class="container pt-90 pb-90">
        <div class="section-content">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="title">Hizmetlerimiz</h2>
                    <nav class="breadcrumbs" role="navigation" aria-label="Breadcrumbs">
                        <div class="breadcrumbs">
                            <span><a href="/Anasayfa" rel="home">Anasayfa</a></span>
                            <span><i class="fa fa-angle-right"></i></span>

                            <span class="active">Hizmetler</span>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section: home End -->
<!-- Section: Service -->
<section class="bg-img-right-top bg-img-cover bg-img-no-repeat" data-tm-bg-img="/images/bg/bg1.png">
    <div class="container">
        <div class="section-content">
            <div class="row">
                @foreach (var x in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="causes-item-current-style1 mb-md-30">
                            <div class="causes-item">
                                <div class="causes-thumb">
                                    <img src="@x.HizmetlerImage" alt="Image" class="w-100">
                                </div>
                                <div class="causes-details">
                                    <h5 class="causes-title mt-0 mb-20"><a href="/HizmetDetay">@x.HizmetlerBaslik</a></h5>
                                    <div class="tm-sc-progress progress-item progress-item-current-style2 m-0">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>


