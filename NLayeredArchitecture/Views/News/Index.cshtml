@model List<EntityLayer.Concrete.Blog>



<!-- Section: page title -->
<section class="page-title layer-overlay section-typo-light bg-img-center" data-tm-bg-img="/images/bg/bg1.jpg">
    <div class="container pt-90 pb-90">
        <div class="section-content">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="title">Haberler</h2>
                    <nav class="breadcrumbs" role="navigation" aria-label="Breadcrumbs">
                        <div class="breadcrumbs">
                            <span><a href="/Anasayfa" rel="home">Anasayfa</a></span>
                            <span><i class="fa fa-angle-right"></i></span>

                            <span class="active">Haberler</span>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section: home End -->

<!-- Section: Service -->
<section class="bg-img-right-top bg-img-cover bg-img-no-repeat" data-tm-bg-img="/images/bg/bg1.png">
    <div class="container">
        <div class="section-content">
            <div class="row">
                @foreach (var x in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="blog-current-style1 mb-lg-30">
                            <article class="post">
                                <div class="entry-header">
                                    <div class="post-thumb">
                                        <div class="post-thumb-inner">
                                            <div class="thumb">
                                                <img class="w-100" src="/HaberResimleri/@x.BlogImage" alt="Image">
                                            </div>

                                            <div class="meta-date">@x.BlogTarih</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="entry-content">s
                                    <h6 class="entry-title mt-0"><a href="/NewsDetails/Index/@x.BlogID">@x.BlogBaslik</a></h6>
                                    <div class="post-btn-readmore"><a href="/NewsDetails/Index/@x.BlogID" class="btn btn-plain-text-with-arrow">Haberin Devamı</a></div>
                                </div>
                            </article>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>




