@model NLayeredArchitecture.Areas.Admin.Models.HizmetlerDuzenle
@{
    ViewData["Title"] = "HizmetlerDüzenle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header border-0">
            <h3 class="mb-0">Hizmetler Güncelleme Sayfası</h3>
        </div>
        <div class="card-body">
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(x=>x.HizmetlerImage)
                <div class="form-group">
                    @Html.HiddenFor(x => x.HizmetlerID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.HizmetlerBaslik, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextAreaFor(x => x.HizmetlerAcıklama, new { @class = "form-control",@style= "height:125px" })
                </div>
                 <div class="form-group">
                    <label>Hizmet Resmi</label>
                    <input type="file" asp-for="ImageFile">

                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>

