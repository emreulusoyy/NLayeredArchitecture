@using EntityLayer.Concrete
@model Hizmetler
@{
    ViewData["Title"] = "HizmetlerDüzenle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header border-0">
            <h3 class="mb-0">Hizmetler Güncelleme Sayfası</h3>
        </div>
        <div class="card-body">
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Hakkında ID</label>
                    @Html.TextBoxFor(x => x.HizmetlerID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.HizmetlerBaslik, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextBoxFor(x => x.HizmetlerImage, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>

