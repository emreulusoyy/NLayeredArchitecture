@using EntityLayer.Concrete
@model List<Hizmetler>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmetler</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Hizmet Başlığı</th>
                            <th>Hizmet Fotoğrafı</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.HizmetlerID</td>
                                <td>@item.HizmetlerBaslik</td>
                                <td>@item.HizmetlerImage</td>

                                <td><a href="/Admin/AdminHizmetler/HizmetlerDüzenle/@item.HizmetlerID" class="btn btn-outline-success">Güncelle</a></td>
                                <td><a href="/Admin/Adminhizmetler/HizmetSil/@item.HizmetlerID" class="btn btn-outline-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/AdminHizmetler/HizmetEkle/" class="btn btn-outline-info">Yeni Hizmet Ekle</a>

            </div>
        </div>
    </div>
</div>

