@using EntityLayer.Concrete
@model List<Hizmetler>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmet Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th> Hizmet Başlığı</th>
                                <th> Hizmet Adı </th>
                                <th> URL </th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                            <tr>
                                <td>@item.HizmetlerID</td>
                                <td><img src="@item.HizmetlerImage" /></td>
                                <td>@item.HizmetlerBaslik</td>
                               
                                <td>
                                    <a href="/Portfolio/EditPortfolio/@item.HizmetlerID/">
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>