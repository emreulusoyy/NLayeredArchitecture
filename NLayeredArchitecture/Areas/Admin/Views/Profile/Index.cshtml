@model EntityLayer.Concrete.Kullanici
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgilerini Düzenleme</h4>
            <form class="forms-sample">

                <div class="form-group">
                    <label for="exampleInputUsername1">Adınız</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Adınız">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Soyadınnız</label>
                    <input type="text" asp-for="Surname" class="form-control" id="exampleInputUsername1" placeholder="Soyadınız">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Kullanıcı Adı</label>
                    <input type="text" asp-for="UserName" class="form-control" id="exampleInputUsername1" placeholder="Kullanıcı Adı">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Mail Adresi</label>
                    <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" placeholder="Mail Adresi">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Şifre</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Şifreniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmPassword1">Şifre tekrar</label>
                    <input type="password" class="form-control" id="exampleInputConfirmPassword1" placeholder="Şifre tekrar">
                </div>
                <div class="form-check form-check-flat form-check-primary">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>

