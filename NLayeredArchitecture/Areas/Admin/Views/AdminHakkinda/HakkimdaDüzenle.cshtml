@model NLayeredArchitecture.Areas.Admin.Models.HakkimdaDüzenle

@{
    ViewData["Title"] = "HakkimdaDüzenle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Areas/Yonetim/assets/css/jquery.fancybox.min.css" />


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header border-0">
            <h3 class="mb-0">Hakkında Güncelleme Sayfası</h3>
        </div>
        <div class="card-body">
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Hakkında ID</label>
                    @Html.TextBoxFor(x => x.HakkındaID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.HakkındaBaslik, new { @class = "form-control" })
                </div>
                <div class="form-group ">
                    @Html.LabelFor(x => x.HakkındaBaslik, "Açıklama", new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10" >
                        @Html.TextAreaFor(x => x.HakkındaAcıklama, new { id = "classic-editor", @class = "form-control form-control-sm", @ValidateRequestMode = "Disabled", @style= "height:125px" })

                    </div>
                </div>


                <div class="form-group">
                    <label>Hakkımızda Resmi</label>
                    <input type="file" asp-for="ImageFile">

                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>





  

