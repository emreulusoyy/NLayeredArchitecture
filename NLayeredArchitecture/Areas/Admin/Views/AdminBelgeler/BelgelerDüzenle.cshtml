@model NLayeredArchitecture.Areas.Admin.Models.BelgelerDüzenle
@{
    ViewData["Title"] = "BelgelerDüzenle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header border-0">
            <h3 class="mb-0">Belgeler Güncelleme Sayfası</h3>
        </div>
        <div class="card-body">
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.BelgeImage)
                    @Html.HiddenFor(x => x.BelgeID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Belge Başlığı</label>
                    @Html.TextBoxFor(x => x.BelgeBaslik, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Belge Fotoğrafı</label>
                    @Html.TextBoxFor(x => x.BelgeImage, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Haber Image</label>
                    <input type="file" asp-for="ImageFile">

                </div>
                
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>

