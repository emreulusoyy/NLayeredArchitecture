@model EntityLayer.Concrete.Belgeler

@{
    ViewData["Title"] = "BelgeEkle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1>Belge Ekleme Sayfası</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header border-0">
    <h3 class="mb-0">Belge Ekleme Sayfası</h3>
</div>
        <div class="card-body">
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.BelgeImage, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Değer</label>
                    @Html.TextBoxFor(x => x.BelgeAcilirImage, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>
