@model NLayeredArchitecture.Areas.Admin.Models.BelgelerDüzenle

@{
    ViewData["Title"] = "BelgeEkle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header border-0">
    <h3 class="mb-0">Belge Ekleme Sayfası</h3>
</div>
        <div class="card-body">
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.BelgeImage)
                    @Html.HiddenFor(x=>x.BelgeID)
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.BelgeBaslik, new { @class = "form-control" })
                </div>
              
                 <div class="form-group">
                    <label>Belge Resmi</label>
                    <input type="file" asp-for="ImageFile">

                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>
