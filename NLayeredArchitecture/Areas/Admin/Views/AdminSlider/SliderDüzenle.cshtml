@using EntityLayer.Concrete
@model Slider
@{
    ViewData["Title"] = "SliderDüzenle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header border-0">
            <h3 class="mb-0">Slider Güncelleme Sayfası</h3>
        </div>
        <div class="card-body">
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Slider ID</label>
                    @Html.TextBoxFor(x => x.SliderID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.SliderBaslik, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Alt Başlık</label>
                    @Html.TextBoxFor(x => x.SliderAltBaslik, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Fotoğraf Linki</label>
                    @Html.TextBoxFor(x => x.SliderImage, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>


