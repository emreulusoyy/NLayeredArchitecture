@model NLayeredArchitecture.Areas.Admin.Models.AnaSlider
@{
    ViewData["Title"] = "SliderEkle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header border-0">
            <h3 class="mb-0">Slayt Ekleme Sayfası</h3>
        </div>
        <div class="card-body">
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Slider ID</label>
                    @Html.TextBoxFor(x => x.SliderID, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Slider Başlık</label>
                    @Html.TextBoxFor(x => x.SliderBaslik, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Slider Açıklama</label>
                    @Html.TextBoxFor(x => x.SliderAltBaslik, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Slayt Fotoğrafı</label>
                    <input type="file" asp-for="ImageFile">

                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>


